    public object GetFormattedValue()
    {
        if (Value == null) return null;

        if (!string.IsNullOrEmpty(Format))
            return ((dynamic)Value).ToString(Format);
        else
            return Value;
    }

    void IDisposable.Dispose()
    {
        countdown?.Dispose();
        Search?.RemoveFilterSetup(filterSetup);
    }
